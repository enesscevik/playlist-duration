{
  "manifest_version": 3,
  "name": "Playlist Duration for Youtube",
  "version": "1.0",
  "description": "This extension is designed to calculate the total duration of playlists on YouTube.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": { "16": "yticon.png", "48": "yticon.png", "128": "yticon.png" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "yticon.png",
      "48": "yticon.png",
      "128": "yticon.png"
    }
  }
}
